<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nameItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        />
    <TextView
        android:id="@+id/numberItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameItemTv"/>
    <TextView
        android:id="@+id/vehicleNumberItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ka03nd4353"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberItemTv"/>
    <TextView
        android:id="@+id/vehicleTypeItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/nameItemTv"
        tools:text="truck"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>